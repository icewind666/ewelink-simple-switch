{
    "compilerOptions": {
      "lib": [
        "es2017","es2015","dom","es6"
      ],
      "module": "commonjs",
  //    "moduleResolution": "Node",
      "strict": true,
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "target": "es2017",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": false,
      "sourceMap": true,
      "outDir": "./build",
      "rootDir": "./src"
    },
    "include": [
      "**.ts",
      "src/light1.ts", 
      "src/light2.ts"
    ],
    "exclude": [
      "node_modules",
    ]
  }
  